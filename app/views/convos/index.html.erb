<h1>Convos#index</h1>
<p>Find me in app/views/convos/index.html.erb</p>
<% @convos.each do |item| %>
  <%= link_to convo_messages_path(item) do %>
    <% if current_user.username == item.receiver.username %>
      <%= item.sender.username %>
    <% else %>
      <%= item.receiver.username  %>
    <% end %>
  <% end %>
<% end %>
